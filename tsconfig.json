{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "files": [
    "ts-custom.d.ts"
  ],
  "types": ["node"],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "types": ["vite/client"],
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }

  }
}